  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

<div class="dropdown navDiv">
  <a class="btn btn-primary navButtons" href="/" role="button"><i class="fas fa-home"></i> Home</a>
</div>

  <div class="box">
